        section.my-donations
            .title 
                p My Donations: 
            .donation-table 
                table 
                    tr 
                        th Donation ID 
                        th Date
                        th Place 
                        th Type
                        th Status 
                    -var dLength = donationID.length
                    -var count = 0
                    while count<dLength 
                        tr 
                            td #{donationID[count]}
                            td #{Date[count]}
                            td #{"To be updated later"}
                            td #{type[count]}
                            td #{"Confirmed"}
                        -count = count + 1
                    
                     


